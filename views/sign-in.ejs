<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/navigation.ejs"); %>
    <main>
      <article class="sign-in card-details">
        <h1>Sign in</h1>
        <p class="small-text">
          Don't have an account? <a href="/sign-up">Register</a>
        </p>
        <form action="/sign-in" method="POST">
          <label for="username">Username</label>
          <input
            type="text"
            id="username"
            name="username"
            required
            minlength="3"
            maxlength="30"
          />
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            minlength="8"
          />
          <% if (error) { %>
          <div class="errors">
            <p><%= error %></p>
          </div>
          <% } %>
          <button class="cta-btn" type="submit">Sign in</button>
        </form>
      </article>
    </main>
  </body>
</html>
