<div class="side-bar">
  <header>
    <div>
      <div class="site-name">Fifty Fountains</div>
      <p>A haiku hunt around New York City</p>
    </div>
    <nav>
      <form action="/search" method="GET">
        <label for="name">Find a fountain</label>
        <input type="text" name="name" />
        <button type="submit" aria-label="search">&gt;</button>
      </form>
      <div>
        <p>By borough</p>
        <ul>
          <% options.map(option => { %>
          <a href="/search?borough=<%= option.borough %>"
            ><li><%= option.borough %></li></a
          >
          <% }); %>
        </ul>
      </div>
      <a href="/">See all fountains</a>
    </nav>
  </header>
  <footer>
    <a href="/about">About this project</a>
  </footer>
</div>
