<!-- Save button for a clue card -->

<% if (clue.is_saved) { %>
<!-- Show filled save icon -->
<form
  action="/<%= clue.borough %>/<%= clue.id %>/unsave/<%= clue.clueid %>"
  method="POST"
>
  <button class="save-btn" type="submit">
    <img class="icon" src="/icons/saved.png" alt="Unsave clue" />
  </button>
</form>

<% } else { %>
<!-- Show outline of save icon -->
<form
  action="/<%= clue.borough %>/<%= clue.id %>/save/<%= clue.clueid %>"
  method="POST"
>
  <button class="save-btn" type="submit">
    <img class="icon" src="/icons/not-saved.png" alt="Save clue" />
  </button>
</form>
<% } %>

<!-- Show total votes -->
<p class="total-votes" aria-label="Total saves by users"><%= clue.votes %></p>
