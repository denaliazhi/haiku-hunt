<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fifty Fountains</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include("./partials/sidebar.ejs"); %>
    <main>
      <div class="page-header">
        <h1><%= title %></h1>
        <p>
          <%= totalResults %> <%= totalResults === 1 ? "result" : "results"%>
        </p>
      </div>
      <div class="card-container">
        <% entries.map(entry => { %>
        <div class="card">
          <a href="/fountain/<%= entry.id %>">
            <p class="small-text"><%= entry.borough %></p>
            <h2><%= entry.name %></h2>
            <% if (entry.haiku_line_1) { %>
            <div class="clue-card">
              <div>
                <p><%= entry.haiku_line_1 %></p>
                <p><%= entry.haiku_line_2 %></p>
                <p><%= entry.haiku_line_3 %></p>
              </div>
            </div>
            <% } %>
          </a>
        </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
