<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/navigation.ejs"); %>
    <main>
      <div class="page-header">
        <p>Welcome back, <%= currentUser.username %></p>
        <p>What will you write today?</p>
      </div>
      <article class="card-details">
        <h1>Your published haikus</h1>
        <div class="clue-container">
          <% clues ? clues.map((clue) => { %>
          <a href="/<%= clue.borough %>/<%= clue.id %>/">
            <div class="clue-card">
              <div>
                <p><%= clue.haiku_line_1 %></p>
                <p><%= clue.haiku_line_2 %></p>
                <p><%= clue.haiku_line_3 %></p>
              </div>
              <div class="clue-details">
                <p>
                  <%= clue.author %> on <%= new
                  Date(clue.submitted).toLocaleDateString("en-US") %>
                </p>
              </div>
            </div>
          </a>
          <% }) : null %>
        </div>
      </article>
    </main>
  </body>
</html>
